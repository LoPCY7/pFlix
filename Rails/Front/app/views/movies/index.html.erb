<section id="all_movies" class="clearfix">
  <div class="wrapper">
    <header class="clearfix">
      <h1>Movies</h1>
    </header>

    <div class="row">
        <% @movies.each do |movie| %>
		<div class="post">
        <% if current_user.id == 1%>
        <%= link_to 'Delete Movie', movie, method: :delete, data: { confirm: 'Are you sure?' }  %>
        <% end %>
        <%=link_to image_tag(movie.image.url(:medium), alt: "Poster"), movie%>
        <h2><%= movie.title %></h2>
        <p class="post_info"><%= movie.rating %> | <%= movie.length %> | <%= movie.genre %></p>
      </div>

      <% end %>
    </div>

  </div>
  </section>

<% if current_user.id == 1%>
<div class="siteButton"><%= link_to 'New Movie', new_movie_path %></div>
<% end %>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
